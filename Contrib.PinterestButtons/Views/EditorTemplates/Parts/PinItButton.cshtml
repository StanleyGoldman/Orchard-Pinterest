@model Contrib.PinterestButtons.Models.PinItButtonPart
@{
    Script.Require("PinItButtonEditor");
        
    var dropDownList = new[] {
        new SelectListItem {Text = "Above", Value = "above", Selected = Model.PinCount == "above"},
        new SelectListItem {Text = "Beside", Value = "beside", Selected = Model.PinCount == "beside"},
        new SelectListItem {Text = "Don't Show", Value = "none", Selected = Model.PinCount == "none"}
    };
}
<fieldset>
    <legend>Pin it Fields</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.PinCount)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.PinCount, dropDownList)
        @Html.ValidationMessageFor(model => model.PinCount)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.AnyImage)
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.AnyImage)
        @Html.ValidationMessageFor(model => model.AnyImage)
    </div>
    
    <div class="editor-label editor-pintitbutton-anyimage">
        @Html.LabelFor(model => model.Url)
    </div>
    <div class="editor-field editor-pintitbutton-anyimage">
        @Html.TextBoxFor(model => model.Url)
        @Html.ValidationMessageFor(model => model.Url)
    </div>
    
    <div class="editor-label editor-pintitbutton-anyimage">
        @Html.LabelFor(model => model.Image)
    </div>
    <div class="editor-field editor-pintitbutton-anyimage">
        @Html.TextBoxFor(model => model.Image)
        @Html.ValidationMessageFor(model => model.Image)
    </div>
    
    <div class="editor-label editor-pintitbutton-anyimage">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field editor-pintitbutton-anyimage">
        @Html.TextBoxFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
</fieldset>
